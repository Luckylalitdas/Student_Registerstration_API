@model List<Student_Registerstration.Models.StudentModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        h2 {
            margin-top: 20px;
            color: #333;
        }
        .container {
            margin-top: 30px;
            background-color: #ffffff;
            padding: 20px;
/*             border-radius: 10px;
 */            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        .btn {
            margin: 5px 0;
        }
        .table th {
            background-color: #007bff;
            color: white;
            text-align: center;
        }
        .table td {
            text-align: center;
        }
        .btn-danger {
            margin-left: 5px;
        }
        .btn-primary:hover, .btn-danger:hover {
            opacity: 0.9;
        }
        .add-btn {
            margin-bottom: 20px;
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">List of Students</h2>
        <div class="add-btn">
            <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Register">Add Student</a>
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Student-ID</th>
                    <th>Student Name</th>
                    <th>Address</th>
                    <th>Gender</th>
                    <th>Class</th>
                    <th>Parent's Name</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                        <td>@item.Gender</td>
                        <td>@item.Class</td>
                        <td>@item.ParentesName</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-warning btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
