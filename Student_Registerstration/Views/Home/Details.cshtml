@model Student_Registerstration.Models.StudentModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 40px;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #007bff;
            margin-bottom: 20px;
        }

        h4 {
            color: #343a40;
            margin-bottom: 20px;
        }

        .row dt {
            font-weight: bold;
            color: #555555;
        }

        .row dd {
            color: #333333;
        }

        .btn-primary {
            margin-right: 10px;
        }

            .btn-primary:hover, .btn-secondary:hover {
                opacity: 0.9;
            }

        .back-link {
            text-decoration: none;
            color: #007bff;
            font-size: 1rem;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Student Details</h1>
        <h4>Details for: @Model.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Student ID</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-4">Password</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

            <dt class="col-sm-4">Confirm Password</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ConfirmPassword)</dd>

            <dt class="col-sm-4">Phone Number</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt class="col-sm-4">Address</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

            <dt class="col-sm-4">Gender</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

            <dt class="col-sm-4">Class</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Class)</dd>

            <dt class="col-sm-4">Parent's Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ParentesName)</dd>

            <dt class="col-sm-4">Parent's Phone No</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ParentesPhoneno)</dd>
        </dl>
        <hr />
        <div class="d-flex justify-content-between">
            <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="back-link" asp-action="Index">&larr; Back to List</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
